<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardView_Radius"
        app:cardElevation="@dimen/cardView_elevation"
        app:cardUseCompatPadding="true"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/detail_recipe_name_padding">

            <TextView
                android:id="@+id/steps_id_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/layout_weight_first"
                android:paddingRight="@dimen/detail_recipe_name_padding"
                android:textSize="@dimen/small_text_size"


                />

            <TextView
                android:id="@+id/step_description"
                android:layout_width="@dimen/linear_layout_height_with_weight"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/layout_weight_third"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dimen" />

</LinearLayout>